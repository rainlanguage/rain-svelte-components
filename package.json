{
	"name": "@rainprotocol/rain-svelte-components",
	"version": "0.0.34",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "npm run build",
		"test": "vitest",
		"coverage": "vitest run --coverage"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "2.0.0",
		"@sveltejs/package": "2.0.2",
		"@sveltejs/vite-plugin-svelte": "^2.0.4",
		"@testing-library/svelte": "^3.2.2",
		"@testing-library/user-event": "^14.4.3",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"resize-observer-polyfill": "^1.5.1",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"jsdom": "^21.1.1",
		"postcss": "^8.4.14",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte-check": "^2.7.1",
		"svelte-fragment-component": "^1.2.0",
		"svelte-htm": "^1.2.0",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.5",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "4.2.2",
		"vitest": "^0.30.1"
	},
	"dependencies": {
		"@formkit/auto-animate": "^1.0.0-beta.3",
		"@metamask/jazzicon": "^2.0.0",
		"@steeze-ui/heroicons": "^2.1.0",
		"@steeze-ui/svelte-icon": "^1.3.2",
		"@sveltejs/kit": "1.15.4",
		"@types/lodash": "^4.14.186",
		"abitype": "^0.1.7",
		"ajv": "^8.11.0",
		"clsx": "^1.2.1",
		"codemirror": "^6.0.1",
		"codemirror-rainlang": "1.0.3",
		"ethers": "^5.7.1",
		"lodash-es": "^4.17.21",
		"svelte": "^3.54.0",
		"svelte-codemirror-editor": "^1.1.0",
		"svelte-ethers-store": "^2.5.8",
		"thememirror": "^2.0.1"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
